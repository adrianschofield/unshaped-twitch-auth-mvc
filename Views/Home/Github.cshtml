@{
    ViewData["Title"] = "Github Auth";
}
@*Need Jquery*@
<script src="https://ajax.microsoft.com/ajax/jquery/jquery-1.10.2.js" type="text/javascript"></script>  

<h1 class="twitch">@ViewData["Title"]</h1>

<input type="button" id="btnRedirect" value="Authorise"/>
<script type="text/javascript">
  $(function(){
    $("#btnRedirect").click(function(){
      // Get the redirect url out of the view data
      var str = '@Html.Raw(ViewData["AuthURL"])';

      // Redirect to the Github auth URL
      window.location.href = str;
    });
  });
</script>
